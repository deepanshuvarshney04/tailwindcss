{#
/**
* @file
* Theme override to display a single component.
*
* footer area template
*/
#}
<footer class="footer-section">
    <div class="container">
        {# Footer Top Twig Code Start here #}
        {% if page.footer_top %}
        <div class="footer-top">
            {{ page.footer_top }}
        </div>
        {% endif %}
        {# Footer Top Twig Code End here #}

        {# Footer Middle Twig Code Start here #}
        <div class="footer-mid pt-12 pb-16">
            <div class="grid grid-cols-4">
                {% if page.footer_first %}
                <div class="grid justify-start footer-first">
                    {{ page.footer_first }}
                </div>
                {% endif %}
                {% if page.footer_second %}
                <div class="grid justify-center footer-second">
                    {{ page.footer_second }}
                </div>
                {% endif %}
                {% if page.footer_third %}
                <div class="grid justify-center footer-third">
                    {{ page.footer_third }}
                </div>
                {% endif %}
                {% if page.footer_fourth %}
                <div class="grid justify-end footer-fourth">
                    {{ page.footer_fourth }}
                </div>
                {% endif %}
            </div>
        </div>
        {# Footer Middle Twig Code End here #}

        {# Footer Bottom Twig Code Start here #}
        <div class="footer-bottom pt-8 border-t-1 border-solid border-bordercolor">
            <div class="grid grid-cols-2">
                <div class="footer-right grid justify-start">
                    <p class="footer-text">Â© {{ "now"|date("Y") }} {{ 'SPACE'|t }}. {{ 'All Rights Reserved.'|t }}</p>
                </div>
                {% if page.footer_bottom_right %}
                <div class="footer-left grid justify-end">
                    {{ page.footer_bottom_right }}
                </div>
                {% endif %}
            </div>
        </div>
        {# Footer Bottom Twig Code End here #}
    </div>
</footer>